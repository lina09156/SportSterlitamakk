<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения для карт -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Ваш API-ключ Яндекс Карт -->
    <meta-data
        android:name="com.yandex.maps.api.v2.apikey"
        android:value="d17517b1-6e6f-4ac6-978c-487a1e0120e8" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/iconka"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconka"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportSterlitamak"
        tools:targetApi="31">

        <!-- Запуск с первой страницы -->
        <activity
            android:name=".SportsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Вторая страница -->
        <activity
            android:name=".PlacesActivity"
            android:exported="false"
            android:parentActivityName=".SportsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SportsActivity" />
        </activity>

        <!-- Третья страница -->
        <activity
            android:name=".PlaceDetailActivity"
            android:exported="false"
            android:parentActivityName=".PlacesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlacesActivity" />
        </activity>

        <!-- Новая активность с картой -->
        <activity
            android:name=".MapActivity"
            android:exported="false"
            android:parentActivityName=".SportsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SportsActivity" />
        </activity>

    </application>

</manifest>